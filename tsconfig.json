{
    "compilerOptions": {
      "target": "ESNext",
      "esModuleInterop": false,
      "strict": true,
      "noImplicitAny": true,
      "outDir": "lib",
      "declaration": true,
      "sourceMap": true,
      "moduleResolution": "node",
      "paths": {
        "@core/*": ["./src/*"],
      },
    },
    "include": ["src/**/*", "projects/**/*"],
    "exclude": ["scripts/ops-generator.ts"],
    "ts-node": {
        "require": ["tsconfig-paths/register"]
    }
  }